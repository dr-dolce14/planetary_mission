<h1>Create a New Mission:</h1>

<% if flash[:my_errors] %>
<% flash[:my_errors].each do |error| %>
<p><%= error %><p>
<% end %>
<% end %>

<%= form_for @mission do |f| %>
<%= f.label :name, value = "Mission Name" %>
<%= f.text_field :name %>

<%= f.label :planet_id %>
<%= f.collection_select :planet_id, @planets, :id, :name %>

<%= f.label :scientist_id %>
<%= f.collection_select :scientist_id, @scientists, :id, :name %>

<%= f.submit %>

<% end %>